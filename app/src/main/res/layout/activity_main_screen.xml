<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.joseph.nxtcontroller.MainScreen">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/vv_btnConnect"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ClOSE"
        android:id="@+id/vv_btnClose"
        android:layout_above="@+id/progressBar"
        android:layout_alignLeft="@+id/vv_btnConnect"
        android:layout_alignStart="@+id/vv_btnConnect"
        android:layout_marginBottom="40dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/vv_btnClose"
        android:layout_alignEnd="@+id/vv_btnClose"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:indeterminate="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NTX Device Bluetooth Connection"
        android:id="@+id/vv_tvDeviceLabel"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/vv_btnConnect"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/vv_btnConnect"
        android:textSize="14dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drive"
        android:id="@+id/subvv_btnDrive"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poll"
        android:id="@+id/subvv_btnPoll"
        android:layout_alignTop="@+id/subvv_btnDrive"
        android:layout_toRightOf="@+id/subvv_btnDrive"
        android:layout_toEndOf="@+id/subvv_btnDrive" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/subvv_btnConnectStatus"
        android:layout_alignTop="@+id/subvv_btnPoll"
        android:layout_toRightOf="@+id/subvv_btnPoll"
        android:layout_toEndOf="@+id/subvv_btnPoll" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servo"
        android:id="@+id/vv_btnServo"
        android:layout_alignTop="@+id/subvv_btnConnectStatus"
        android:layout_toRightOf="@+id/vv_tvDeviceLabel"
        android:layout_toEndOf="@+id/vv_tvDeviceLabel" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vv_IcoImag"
        android:layout_below="@+id/vv_tvDeviceLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/bt_off"
        android:layout_above="@+id/vv_btnClose"
        android:layout_toLeftOf="@+id/subvv_btnPoll"
        android:layout_toStartOf="@+id/subvv_btnPoll" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:text="Battery Level"
        android:id="@+id/vv_tvBatterLevel"
        android:layout_above="@+id/progressBar"
        android:layout_alignLeft="@+id/vv_tvConnectStatus"
        android:layout_alignStart="@+id/vv_tvConnectStatus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Connected"
        android:id="@+id/vv_tvConnectStatus"
        android:textSize="14dp"
        android:layout_below="@+id/vv_IcoImag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
