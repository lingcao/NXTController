<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.joseph.nxtcontroller.MainScreen">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/vv_btnClose"
        android:layout_alignEnd="@+id/vv_btnClose"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:indeterminate="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drive"
        android:id="@+id/subvv_btnDrive"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servo"
        android:id="@+id/vv_btnServo"
        android:layout_alignTop="@+id/subvv_btnConnectStatus"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:text="Battery Level"
        android:id="@+id/vv_tvBatterLevel"
        android:layout_above="@+id/progressBar"
        android:layout_alignLeft="@+id/vv_tvConnectStatus"
        android:layout_alignStart="@+id/vv_tvConnectStatus" />

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/text_scan_devices"
        android:layout_above="@+id/vv_btnClose"
        android:layout_marginBottom="14dp"
        android:layout_alignLeft="@+id/vv_btnClose"
        android:layout_alignStart="@+id/vv_btnClose" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ClOSE"
        android:id="@+id/vv_btnClose"
        android:layout_above="@+id/progressBar"
        android:layout_alignLeft="@+id/vv_btnConnect"
        android:layout_alignStart="@+id/vv_btnConnect" />

    <Button
        android:id="@+id/btn_view_paired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/text_view_paired"
        android:layout_above="@+id/btn_scan"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/subvv_btnConnectStatus"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_view_paired"
        android:layout_alignStart="@+id/btn_view_paired" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poll"
        android:id="@+id/subvv_btnPoll"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/subvv_btnConnectStatus"
        android:layout_toStartOf="@+id/subvv_btnConnectStatus"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vv_IcoImag"
        android:src="@drawable/bt_off"
        android:layout_above="@+id/btn_view_paired"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Connected"
        android:id="@+id/vv_tvConnectStatus"
        android:textSize="14dp"
        android:layout_below="@+id/vv_IcoImag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="#ff0000"
        android:text="@string/text_bluetooth_off"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/vv_btnConnect"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
